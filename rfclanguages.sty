	\csgdef{rfclang#1}{#2}%
}
\newcommand\GetLanguage[1][\bbl@main@language]{%
	\ifx#1\@undefined en-US%  
	\else%
	\ifcsdef{rfclang#1}{\csuse{rfclang#1}}{}%
	\fi%
}

